# ===========================================
# Django Backend - Environment Variables
# ===========================================
# cp .env.example .env

# -------------------------------------------
# DJANGO CORE
# -------------------------------------------
# Secret key generatsiya: python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY=django-insecure-change-this-in-production

# Debug mode (development=True, production=False)
DEBUG=True

# Allowed hosts
ALLOWED_HOSTS=localhost,127.0.0.1

# -------------------------------------------
# DATABASE
# -------------------------------------------
# SQLite (local development)
DATABASE_URL=sqlite:///db.sqlite3

# PostgreSQL (production)
# DATABASE_URL=postgres://user:password@localhost:5432/dbname

# -------------------------------------------
# TELEGRAM BOT
# -------------------------------------------
# Bot username
TELEGRAM_BOT_USERNAME=your_bot_username

# Internal API token
BOT_API_TOKEN=your-random-secure-token

# -------------------------------------------
# INTEGRATIONS
# -------------------------------------------
# Kinescope API
KINESCOPE_API_KEY=your_kinescope_api_key

# Notion API
NOTION_API_KEY=secret_your_notion_token