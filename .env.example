# ===========================================
# Online Course Platform - Environment Variables
# ===========================================
# cp .env.example .env

# -------------------------------------------
# DATABASE (PostgreSQL)
# -------------------------------------------
DB_NAME=online_course_db
DB_USER=postgres
DB_PASSWORD=your_secure_password_here

# -------------------------------------------
# DJANGO
# -------------------------------------------
DJANGO_ENV=dev # dev or prod
SECRET_KEY=your-super-secret-key-generate-with-django
DEBUG=False
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# -------------------------------------------
# TELEGRAM BOT
# -------------------------------------------
# BotFather Token
TELEGRAM_BOT_TOKEN=1234567890:ABCdefGHIjklMNOpqrsTUVwxyz

# Bot username
TELEGRAM_BOT_USERNAME=your_bot_username

# Backend for bot token
BOT_API_TOKEN=random-secure-string-for-internal-api

# Deep link uchun encryption key (32 bytes, base64)
ENCRYPTION_KEY=your-32-byte-base64-encoded-key-here

# -------------------------------------------
# KINESCOPE
# -------------------------------------------
# https://app.kinescope.io → Настройки → API
KINESCOPE_API_KEY=your_kinescope_api_key

# -------------------------------------------
# NOTION
# -------------------------------------------
# https://www.notion.so/my-integrations
NOTION_API_KEY=secret_your_notion_integration_token